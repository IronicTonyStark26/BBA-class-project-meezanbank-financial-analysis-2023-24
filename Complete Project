    <script>
        const financialData = {
            growth: {
                labels: ['Total Assets', 'Investments', 'Deposits', 'Advances'],
                values: [28.2, 34.3, 22.8, -24.5],
                colors: ['#8C1D2F', '#C5A059', '#1A202C', '#E53E3E']
            },
            mix: {
                labels: ['Investments', 'Advances', 'Cash', 'Other Assets'],
                values: [64.4, 30.1, 8.8, 6.7],
                colors: ['#8C1D2F', '#C5A059', '#333333', '#A0AEC0']
            }
        };

        let growthChart = null;
        let mixChart = null;

        function navigate(id) {
            document.querySelectorAll('section').forEach(s => s.classList.add('hidden'));
            document.getElementById(`section-${id}`).classList.remove('hidden');
            
            document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
            document.getElementById(`nav-${id}`).classList.add('active');
            
            if (id === 'financials') setTimeout(initCharts, 100);
            window.scrollTo(0, 0);
            document.getElementById('mobile-menu').classList.add('hidden');
        }

        function toggleMobileMenu() {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        }

        function switchFinTab(id) {
            document.querySelectorAll('.fin-tab').forEach(t => {
                t.classList.remove('active', 'text-[#8C1D2F]', 'border-[#8C1D2F]');
                t.classList.add('text-gray-400', 'border-transparent');
            });
            const activeTab = document.getElementById(`tab-${id}`);
            activeTab.classList.add('active', 'text-[#8C1D2F]', 'border-[#8C1D2F]');
            activeTab.classList.remove('text-gray-400', 'border-transparent');

            document.querySelectorAll('.fin-content').forEach(c => c.classList.add('hidden'));
            document.getElementById(`content-${id}`).classList.remove('hidden');
            initCharts();
        }

        function initCharts() {
            const ctxG = document.getElementById('growthChart')?.getContext('2d');
            const ctxM = document.getElementById('mixChart')?.getContext('2d');

            if (growthChart) growthChart.destroy();
            if (mixChart) mixChart.destroy();

            if (ctxG) {
                growthChart = new Chart(ctxG, {
                    type: 'bar',
                    data: {
                        labels: financialData.growth.labels,
                        datasets: [{
                            data: financialData.growth.values,
                            backgroundColor: financialData.growth.colors,
                            borderRadius: 6
                        }]
                    },
                    options: { 
                        responsive: true, 
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: { y: { grid: { borderDash: [5, 5] } } }
                    }
                });
            }

            if (ctxM) {
                mixChart = new Chart(ctxM, {
                    type: 'doughnut',
                    data: {
                        labels: financialData.mix.labels,
                        datasets: [{
                            data: financialData.mix.values,
                            backgroundColor: financialData.mix.colors,
                            borderWidth: 6,
                            borderColor: '#ffffff'
                        }]
                    },
                    options: { 
                        responsive: true, 
                        maintainAspectRatio: false,
                        cutout: '75%',
                        plugins: { legend: { position: 'bottom', labels: { boxWidth: 12, padding: 20 } } }
                    }
                });
            }
        }

        window.onload = () => navigate('overview');
    </script>
</body>
</html>
